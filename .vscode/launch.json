  "version": "0.2.0",
  "configurations": [
    {
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev",
      "name": "Launch Development",
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/**",
        "**/.cache/**",
        "logs/**"
      ],
      "timeout": 10000,
      "suppressMultipleSessionWarning": true,
      "internalConsoleOptions": "openOnFirstSessionStart"
    },
    {
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run serve",
      "name": "Launch Serve",
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/**",
        "**/.cache/**",
        "logs/**"
      ],
      "timeout": 10000,
      "suppressMultipleSessionWarning": true,
      "internalConsoleOptions": "openOnFirstSessionStart"
    },
    {
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run docker:run:serve",
      "name": "Launch Serve (Docker)",
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/**",
        "**/.cache/**",
        "logs/**"
      ],
      "timeout": 10000,
      "suppressMultipleSessionWarning": true,
      "internalConsoleOptions": "openOnFirstSessionStart"
    }
  ]
}
